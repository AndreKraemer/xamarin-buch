<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StylesSample.Views.CssSamplePage">
    <ContentPage.Resources>
        <StyleSheet Source="/Styles/Styles.css"></StyleSheet>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label StyleClass="error, medium" Text="Das ist eine Fehlermeldung"></Label>
            <Label StyleClass="warning, small" Text="Das ist eine Warnmeldung"></Label>
            <Label StyleClass="success, large" Text="Das ist eine Erfolgsmeldung"></Label>
            <Button Text="Das ist ein Button"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>