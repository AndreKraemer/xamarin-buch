<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutSample.Views.StackLayoutSamplePage"
             Title ="StackLayout Demo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Label 1" BackgroundColor="#091F35" Padding="50" TextColor="White"/>
            <Label Text="Label 2" BackgroundColor="#2097C8" Padding="50" TextColor="White"/>
            <Label Text="Label 3" BackgroundColor="#F79330" Padding="50" TextColor="White"/>
            <Label Text="Label 4" BackgroundColor="#76787A" Padding="50" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>